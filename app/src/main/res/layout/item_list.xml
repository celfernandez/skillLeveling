<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemSelected"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp">

    <ImageView
        android:id="@+id/itemImageIV"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/description" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        app:layout_constraintStart_toEndOf="@id/itemImageIV"
        app:layout_constraintTop_toTopOf="@+id/itemImageIV"
        >

        <TextView
            android:id="@+id/itemNameTV"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            tools:text="@string/product_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/itemPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/itemNameTV"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="$$$$"
            />

        <TextView
            android:id="@+id/itemInformationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/itemPriceTV"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/more_information"
            />

        <TextView
            android:id="@+id/itemLocationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="29dp"
            app:layout_constraintTop_toBottomOf="@id/itemInformationTV"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/location" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>