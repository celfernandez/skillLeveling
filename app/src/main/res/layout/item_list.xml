<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/itemImageIV"
        android:layout_width="131dp"
        android:layout_height="131dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/description" />

    <TextView
        android:id="@+id/itemNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        tools:text="product name"
        app:layout_constraintStart_toEndOf="@id/itemImageIV"
        />

    <TextView
        android:id="@+id/itemPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/itemNameTV"
        app:layout_constraintStart_toEndOf="@id/itemImageIV"
        tools:text="$$$$"
        />

    <TextView
        android:id="@+id/itemInformationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/itemPriceTV"
        app:layout_constraintStart_toEndOf="@id/itemImageIV"
        tools:text="more information"
        />

    <TextView
        android:id="@+id/itemZonaTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="29dp"
        app:layout_constraintStart_toEndOf="@id/itemImageIV"
        app:layout_constraintTop_toBottomOf="@+id/itemInformationTV"
        tools:text="zona" />


</androidx.constraintlayout.widget.ConstraintLayout>